{
    "name": "e2eTests",
    "version": "0.0.1",
    "private": true,
    "scripts": {
        "start": "node node_modules/react-native/local-cli/cli.js start --config=rn-cli.config.js --resetCache",
        "test": "yarn test:ios && yarn test:android && yarn test:web",
        "web": "fructose-web --build-dir dist/public -d fructose",
        "web:build:vendor-dev": "webpack --config fructose/vendor.webpack.config.js",
        "test:web": "./scripts/web-tests.sh",
        "test:ios": "./scripts/ios-tests.sh",
        "test:android": "./scripts/android-tests.sh",
        "test:android-ci": "SAUCE_USERNAME=${SAUCE_USERNAME} SAUCE_KEY=${SAUCE_KEY} ./scripts/android-saucelabs-tests.sh"
    },
    "dependencies": {
        "@times-components/fructose": "../",
        "chromeless": "^1.3.0",
        "react": "^16.2.0",
        "react-native": "^0.50.4",
        "react-native-storybook-loader": "^1.4.1",
        "react-native-web": "^0.4.0",
        "wd": "^1.4.1",
        "webpack": "^3.8.1"
    },
    "jest": {
        "preset": "react-native",
        "modulePathIgnorePatterns": [
            "<rootDir>/node_modules/@times-components/fructose/node_modules/react-native",
            "<rootDir>/node_modules/@times-components/fructose/e2eTests",
            "<rootDir>/../node_modules"
        ],
        "transformIgnorePatterns": [
            "node_modules/(?!react-native|react-navigation|fructose-app|@times-components/image)"
        ],
        "setupTestFrameworkScriptFile": "./fructose/jest-setup.js"
    },
    "devDependencies": {
        "babel-jest":"22.4.3",
        "babel-preset-env":"1.6.1",
        "babel-preset-react-native":"4.0.0",
        "compression-webpack-plugin": "^1.0.0",
        "html-webpack-plugin": "^2.28.0",
        "http-serve": "^1.0.1",
        "jest": "20.0.4",
        "jest-cli": "20.0.4",
        "jest-environment-node-debug": "2.0.0",
        "json-loader": "^0.5.4",
        "react": "16.3.1",
        "react-dom": "16.3.1",
        "react-native": "0.54.2",
        "url-loader": "^0.5.8",
        "webpack-dev-server":"3.1.3"
    },
    "config": {
        "react-native-fructose-loader": {
            "searchDir": [
                "./"
            ],
            "pattern": "**/*.fructose.test.js",
            "outputFile": "./fructose/components.js"
        }
    }
}
