{
  "name": "@times-components/fructose",
  "version": "3.2.3",
  "main": "index.js",
  "scripts": {
    "test:unit": "jest --verbose --forceExit",
    "test": "./scripts/tests.sh",
    "precommit-msg": "echo 'Pre-commit checks...' && exit 0",
    "lint-staged": "lint-staged",
    "lint:packages": "eslint . --fix",
    "lint:fructose": "eslint e2eTests/fructose /--fix",
    "lint:e2eTests": "eslint e2eTests /--fix",
    "prettier:diff": "prettier --list-different '**/*.js'",
    "prettier:write": "prettier --write '**/*.js'",
    "prepare": "babel packages/test-helpers/src --out-dir packages/test-helpers/lib",
    "copy": "APPDIR=e2eTests/node_modules/@times-components/fructose/packages && rm -rf $APPDIR && cp -r ./packages $APPDIR"
  },
  "bin": {
    "compile-tests": "packages/test-helpers/bin/writeComponentsTests.js",
    "fructose-web": "packages/web/bin/start.js",
    "fructose-tunnel": "packages/test-helpers/bin/createTunnel.js"
  },
  "pre-commit": [
    "precommit-msg",
    "lint-staged"
  ],
  "lint-staged": {
    "**/*.js": [
      "lint:packages",
      "lint:fructose",
      "lint:e2eTests",
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "preset": "react-native",
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/e2eTests",
      "<rootDir>/packages/test-helpers/lib"
    ]
  },
  "dependencies": {
    "callsite": "^1.0.0",
    "commander": "^2.12.2",
    "express": "^4.16.2",
    "html-webpack-plugin": "3.2.0",
    "jimp": "^0.2.28",
    "ngrok": "^2.2.24",
    "npmlog": "^4.1.2",
    "pixelmatch": "^4.0.2",
    "pngjs": "^3.3.1",
    "prop-types": "^15.6.0",
    "react-native-nested-listview": "^0.3.0",
    "react-native-side-menu": "^1.1.3",
    "request": "^2.82.0",
    "server-destroy": "^1.0.1",
    "socket.io": "1.7.4",
    "socket.io-client": "1.7.4",
    "webpack": "4.6.0",
    "webpack-dev-server": "3.1.3",
    "webpack-merge": "4.1.2"
  },
  "peerDependencies": {
    "react": ">= 16.3.1",
    "react-native": ">= 0.54.2"
  },
  "devDependencies": {
    "babel-core": "6.26.0",
    "babel-preset-env": "1.6.1",
    "babel-polyfill": "6.26.0",
    "babel-loader": "7.1.4",
    "babel-cli": "^6.26.0",
    "babel-preset-react-native": "4.0.0",
    "babel-register": "6.26.0",
    "enzyme": "3.3.0",
    "enzyme-to-json": "^3.2.2",
    "enzyme-adapter-react-16": "^1.1.0",
    "eslint": "4.18.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.6.1",
    "jest": "^21.2.1",
    "lint-staged": "4.0.0",
    "portfinder": "^1.0.13",
    "pre-commit": "^1.2.2",
    "prettier": "^1.8.2",
    "react": "16.3.1",
    "react-dom": "16.3.1",
    "react-native": "0.54.2"
  },
  "author": "News UK & Ireland Ltd",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/rjanjua/fructose/issues"
  }
}
