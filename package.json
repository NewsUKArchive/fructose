{
  "name": "@times-components/fructose",
  "version": "3.1.5",
  "main": "fructose.js",
  "scripts": {
    "test:unit": "jest --verbose --forceExit",
    "test": "./scripts/tests.sh",
    "precommit-msg": "echo 'Pre-commit checks...' && exit 0",
    "lint-staged": "lint-staged",
    "lint:packages": "eslint . --fix",
    "lint:fructose": "eslint e2eTests/fructose /--fix",
    "lint:e2eTests": "eslint e2eTests /--fix",
    "prettier:diff": "prettier --list-different '**/*.js'",
    "prettier:write": "prettier --write '**/*.js'",
    "prepare": "babel packages/test-helpers/src --out-dir packages/test-helpers/lib"
  },
  "bin": {
    "compile-tests": "packages/test-helpers/bin/writeComponentsTests.js",
    "fructose-web": "packages/web/bin/start.js",
    "fructose-tunnel": "packages/test-helpers/bin/createTunnel.js"
  },
  "pre-commit": [
    "precommit-msg",
    "lint-staged"
  ],
  "lint-staged": {
    "**/*.js": [
      "lint:packages",
      "lint:fructose",
      "lint:e2eTests",
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "preset": "react-native",
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/e2eTests",
      "<rootDir>/packages/test-helpers/lib"
    ],
    "setupFiles": [
      "<rootDir>/.jest/jest-setup.js"
    ]
  },
  "dependencies": {
    "babel-polyfill": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "callsite": "^1.0.0",
    "commander": "^2.12.2",
    "enzyme-to-json": "^3.2.2",
    "express": "^4.16.2",
    "html-webpack-plugin": "^2.28.0",
    "jimp": "^0.2.28",
    "ngrok": "^2.2.24",
    "npmlog": "^4.1.2",
    "pixelmatch": "^4.0.2",
    "pngjs": "^3.3.1",
    "prop-types": "^15.6.0",
    "request": "^2.82.0",
    "server-destroy": "^1.0.1",
    "socket.io": "^2.0.4",
    "socket.io-client": "^2.0.4",
    "webpack": "^3.8.1",
    "webpack-dev-server": "^2.9.5",
    "webpack-merge": "^4.1.1"
  },
  "peerDependencies": {
    "react": "16.0.0",
    "react-native": "0.50"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-react-native": "^4.0.0",
    "babel-register": "^6.26.0",
    "enzyme": "^3.2.0",
    "enzyme-adapter-react-16": "^1.1.0",
    "eslint": "3.19.0",
    "eslint-config-airbnb": "15.0.1",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "5.1.1",
    "eslint-plugin-react": "^7.5.1",
    "jest": "^21.2.1",
    "lint-staged": "4.0.0",
    "portfinder": "^1.0.13",
    "pre-commit": "^1.2.2",
    "prettier": "^1.8.2",
    "react": "^16.2.0",
    "react-dom": "16",
    "react-native": "^0.50.4"
  },
  "author": "News UK & Ireland Ltd",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/rjanjua/fructose/issues"
  }
}
